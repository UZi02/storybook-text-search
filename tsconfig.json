{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": false,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["ES2022", "dom"],
    "module": "es2022",
    "target": "ES2022",
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types"],
    "rootDir": "./src",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "paths": {
      "src/*": ["./src/*"]
    },
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*", ".storybook-text-search/custom-extractors"],
  "exclude": ["node_modules", "dist"]
}
